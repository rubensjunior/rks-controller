<script>
    // Máscara para CNPJ: 00.000.000/0000-00
    document.getElementById('cnpj_ipt').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, ''); // Remove tudo que não é dígito
        
        if (value.length > 14) {
            value = value.slice(0, 14); // Limita a 14 dígitos
        }
        
        // Aplica a máscara
        if (value.length > 0) {
            value = value.replace(/(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/, '$1.$2.$3/$4-$5');
        }
        
        e.target.value = value;
    });

    // Máscara para CEP: 00000-000
    document.getElementById('cep_ipt').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, ''); // Remove tudo que não é dígito
        
        if (value.length > 8) {
            value = value.slice(0, 8); // Limita a 8 dígitos
        }
        
        // Aplica a máscara
        if (value.length > 5) {
            value = value.replace(/(\d{5})(\d{3})/, '$1-$2');
        }
        
        e.target.value = value;
    });
</script>